{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "chat-ai",
  "version": "0.1.0",
  "identifier": "com.chat-ai.app",
  "build": {
    "frontendDist": "../src"
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "commands": {
      "allowed": [
        "chat",
        "fetch_models",
        "save_api_key",
        "get_api_key",
        "remove_api_key",
        "save_api_url",
        "get_api_url",
        "remove_api_url"
      ]
    }
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "chat-ai",
        "width": 800,
        "height": 600,
        "visible": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "category": "Utility",
    "shortDescription": "Chat AI Application",
    "longDescription": "A chat application powered by AI",
    "targets": [
      "deb",
      "rpm",
      "dmg",
      "msi",
      "appimage"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "linux": {
      "deb": {
        "files": {}
      }
    }
  }
}
